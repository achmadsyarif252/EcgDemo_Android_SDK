<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EDF9FF"
              android:orientation="vertical">

<TextView
    android:layout_width="wrap_content"
    android:layout_marginTop="200dp"
    android:layout_gravity="center_horizontal"
    android:drawablePadding="10dp"
    android:gravity="center"
    android:textColor="#56575F"
    android:drawableTop="@drawable/ic_router"
    android:text=" 连接中…"
    android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:textColor="#231916"
        android:text="温馨提示"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#56575F"
        android:text="若已连接的WiFi更换名称与密码，或更换充电WiFi底座，请进行重新配置"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_below="@+id/tvh"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/sel_login_border_line_round"
        android:text="重新配置"
        android:textColor="#ffffff"/>
</LinearLayout>